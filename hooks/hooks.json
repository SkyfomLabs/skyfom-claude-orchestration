{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/session-start.sh",
            "description": "Initialize orchestration environment and load state"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/validate-task-spawn.py",
            "timeout": 30,
            "description": "Validate task parameters and check agent slots"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/validate-bash.py",
            "timeout": 15,
            "description": "Validate bash commands for security"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/track-agent-completion.sh",
            "timeout": 60,
            "description": "Track agent completion and update metrics"
          },
          {
            "type": "command",
            "command": "python3 \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/track-loop-iteration.py",
            "timeout": 30,
            "description": "Track loop iterations and circuit breaker state"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/scripts/session-end.sh",
            "description": "Save orchestration state and generate session report"
          }
        ]
      }
    ]
  }
}
